bit rel_op(int pkt_1, int constant, int opcode) {
  assert((opcode == 1) || (opcode == 2) || (opcode == 3));
  if (opcode == 1) {
    return pkt_1 != constant;
  } else if (opcode == 2) {
    return pkt_1 < constant;
  } else if (opcode == 3) {
    return pkt_1 > constant;
  }
}

